<%- @projects.each do |project| %>
	<div class="project">
		<div class="project_header">

			
			<span class="fa fa-list"></span>
			<%= project.name  %>
			<div class="pull-right">
				<%= link_to content_tag('span', '', class: 'fa fa-pencil'), edit_project_path(project), class: 'action' %>
 				<%= link_to content_tag('span', '', class: 'fa fa-trash'), project, method: :delete, class: 'action' %>

			</div>
		</div>

		<div class="project_new">
			<div class="row">
				<div class="col-xs-1">
				</div>
				<div class="col-xs-11">
					<%=form_for Task.new do |f|%>
					  <div class="input-group">
				      <%= f.text_field :title, class: "form-control", placeholder: "Start typing here to create a task..."%>
				      <%= f.hidden_field :project_id, value: project.id%>
				      <span class="input-group-btn">
				      <%=f.submit 'Add task', class: 'btn btn-default'%>
				      </span>
				      
				     <%- end %> 
				    </div>
				</div>
			</div>

   


		</div>

		<div class="project_tasks">
			<%- project.tasks.each do |task, index| %>

			

				<div>
					<div class="task_border">
						<div class="row">
							<div class="col-xs-1 col-sm-1	col-md-1 col-lg-1 padding-top-10 padding-bottom-10 checkbox_wrap">	
								
								<%- if task.completed %>
									
									<input type='checkbox' class='completed_checkbox' data-task-id=<%=task.id%> checked>
								<%- else%>	
									<input type='checkbox' class='completed_checkbox' data-task-id=<%=task.id%>>
								<%end%>			
							</div>

							<div class="col-xs-9 col-sm-9	col-md-9 col-lg-9 padding-top-10 padding-bottom-10 content_wrap">

								
						
							<span data-task-id=<%= task.id %> class=<%= task.completed ? 'task_done' : ''%>><%= task.title %></span>		
									
							</div>

							<div class="col-xs-2 col-sm-2	col-md-2 col-lg-2 padding-top-10 padding-bottom-10 ctrl_wrap">
								<div class="btn_link">
							<%= link_to content_tag('span', '', class: 'fa fa-pencil'), edit_task_path(task), class: 'action' %>
								</div>
								<div class="btn_link">
							<%= link_to content_tag('span', '', class: 'fa fa-trash'), task, method: :delete, class: 'action' %>
								</div>

							</div>

					</div>
						</div>

				</div>
			<%- end %>
		</div>
	
	</div>

<%- end %>
<div class="add_project_btn">
	
	
	<%= link_to  new_project_path, class: 'btn btn-primary ' do %>
		
		

		<span class="plus_wrap">  <i class="fa fa-plus plus"  aria-hidden="true"></i>    Add TODO list</span>

	<%- end %>			

</div>
